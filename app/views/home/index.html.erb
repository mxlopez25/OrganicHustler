    function load_side_elements(id, dd) {
        $.ajax({
            url: '/catalog/product/presets?product_id=' + id,
            type: 'GET',
            dataType: 'json',
            data: {},
            success: function (data) {


                var side_list = $('#side-list-' + dd);
